generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                       String    @id @default(cuid())
  email                    String    @unique
  name                     String
  password                 String
  role                     UserRole  @default(EMPLOYEE)
  level                    UserLevel @default(NORMAL)
  approved                 Boolean   @default(false)
  passwordResetRequested   Boolean   @default(false)
  passwordResetRequestedAt DateTime?
  tempPassword             String?
  tempPasswordCreatedAt    DateTime?
  createdAt                DateTime  @default(now())
  updatedAt                DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  rentals  Rental[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Equipment {
  id          String          @id @default(cuid())
  name        String
  model       String
  serialNumber String         @unique
  description String?
  status      EquipmentStatus @default(AVAILABLE)
  imageUrl    String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  rentals Rental[]

  @@map("equipment")
}

model Rental {
  id          String       @id @default(cuid())
  userId      String
  equipmentId String
  startDate   DateTime
  endDate     DateTime
  purpose     String
  status      RentalStatus @default(PENDING)
  notes       String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  user      User      @relation(fields: [userId], references: [id])
  equipment Equipment @relation(fields: [equipmentId], references: [id])

  @@map("rentals")
}

enum UserRole {
  ADMIN
  EMPLOYEE
}

enum UserLevel {
  NORMAL
  SUPER
}

enum EquipmentStatus {
  AVAILABLE    // 사용 가능
  RENTED       // 대여 중
  RESERVED     // 대여 예약
  UNAVAILABLE  // 사용 불가
}

enum RentalStatus {
  PENDING
  APPROVED
  REJECTED
  RESERVED
  ACTIVE
  RETURN_PENDING
  COMPLETED
  CANCELLED
}
